{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "watch": false,
        "rootDir": "./",
        "outDir": "./build",
        "esModuleInterop": true,
    }
}
